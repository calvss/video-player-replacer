// ==UserScript==
// @name         Youtube adblock embed fixer
// @namespace    http://tampermonkey.net/
// @version      0.3
// @description  Change the video player to an iframe embed
// @author       Calvss
// @match        *://*.youtube.com/watch*
// @icon         https://www.google.com/s2/favicons?domain=youtube.com
// @grant        none
// @run-at       document-start
// @license      MIT
// ==/UserScript==
var notDone = 1;

window.onload = function() {
    const queryString = window.location.search
    const urlParams = new URLSearchParams(queryString);
    var bodyList = document.querySelector("body")
    var observer = new MutationObserver(function(mutationList, observer) {
        mutationList.forEach(function(mutation) {
            var videoContainer = document.getElementById('full-bleed-container');
            if (videoContainer)
            {
                if(notDone)
                {
                    videoContainer.innerHTML = '<iframe src=https://www.youtube.com/embed/' + urlParams.get('v') + ' width=100%></iframe>';
                }
                notDone = 0;
            }
        });
    });
    var config = {
        childList: true,
        subtree: true
    };
    observer.observe(bodyList, config);
};
